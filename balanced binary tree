
class Solution {
public:
    bool isBalanced(TreeNode* root) {
        return check(root)!=-1;
    }
    int check(TreeNode*root){
        if(root==NULL)return 0;
        int left = check(root->left);
        if(left==-1)return -1;
        int right = check(root->right);
        if(right==-1)return -1;
        if(abs(right-left)>1)return -1;
        return max(left,right)+1;
    }
};
